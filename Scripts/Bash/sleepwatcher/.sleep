#!/usr/bin/env bash
SLEEP_LOG=/tmp/sleep.log
if [[ ! -f "$SLEEP_LOG" ]]; then
  touch $SLEEP_LOG;
fi
# disable wireless
printf "[`date`] Disabling WiFi" >> $SLEEP_LOG;
printf `networksetup -setairportpower en0 off` >> $SLEEP_LOG;
printf "\n" >> $SLEEP_LOG;
# disable bluetooth (blueutil must be installed, errors will be swallowed as this script is executed by a daemon)
printf "[`date`] Disabling Bluetooth" >> $SLEEP_LOG;
printf `blueutil -p 0` >> $SLEEP_LOG;
printf "\n" >> $SLEEP_LOG;
