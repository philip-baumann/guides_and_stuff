#!/usr/bin/env bash
SLEEP_LOG=/tmp/sleep.log
if [[ ! -f "$SLEEP_LOG" ]]; then
  touch $SLEEP_LOG;
fi
# disable wireless
echo -e "[`date`] Disabling WiFi:\n" >> $SLEEP_LOG;
echo -e `networksetup -setairportpower en0 off` >> $SLEEP_LOG;
echo -e "\n" >> $SLEEP_LOG;
# disable bluetooth (blueutil must be installed, errors will be swallowed as this script is executed by a daemon)
echo -e "[`date`] Disabling Bluetooth:\n" >> $SLEEP_LOG;
echo -e `blueutil -p 0` >> $SLEEP_LOG;
echo -e "\n" >> $SLEEP_LOG;
