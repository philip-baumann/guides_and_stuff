#!/usr/bin/env bash
SLEEP_LOG=/tmp/sleep.log
if [[ ! -f "$SLEEP_LOG" ]]; then
  touch $SLEEP_LOG;
fi
# enable wireless
printf "[`date`] Enabling WiFi" >> $SLEEP_LOG;
printf `networksetup -setairportpower en0 on` >> $SLEEP_LOG;
printf "\n" >> $SLEEP_LOG;
# enable bluetooth (blueutil must be installed, errors will be swallowed as this script is executed by a daemon)
printf "[`date`] Enabling Bluetooth" >> $SLEEP_LOG;
printf `blueutil -p 1` >> $SLEEP_LOG;
printf "\n" >> $SLEEP_LOG;
